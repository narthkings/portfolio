    "@emotion/styled": "^11.6.0",
    "@fontsource/outfit": "^4.5.1",
    "@keystone-6/core": "^1.0.1",
    "@keystone-6/fields-document": "^1.0.1",
    "aos": "^3.0.0-beta.6",
    "formik": "^2.2.9",
    "framer-motion": "^5.5.5",
    "graphql": "^16.3.0",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-typed": "^1.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/aos": "^3.0.4",
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "eslint": "^8.11.0",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "typescript": "4.5.4"
  }
}
